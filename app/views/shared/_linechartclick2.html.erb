$("<%= idw %>").click(function(){
	$(this).siblings().removeClass('active');
	$(this).addClass('active');
	var <%= dataname %> = {
		labels: <%= last7ddate %>,
		datasets: [
			{
				label: "<%= label1 %>", 
				backgroundColor: 'rgba(220, 220, 220, 0.3)',
				pointBackgroundColor: "rgba(220, 220, 220, 0.3)",
				pointBorderColor: "#fff",
				data: <%= weekdata1 %>,
			},{
				label: "<%= label2 %>", 
				backgroundColor: 'rgba(26,179,148,0.5)',
				pointBorderColor: "#fff",
				data:  <%= weekdata2 %>,
			},
		]
	};

	var lineOptions = {
		responsive: true,
	};
	<%= linechartid %>.destroy();
	<%= linechartid %> = new Chart(document.getElementById("<%= linechartid %>").getContext("2d"), {type: 'line', data: <%= dataname %>, options:lineOptions}); 

});

